<section class= 'sign-up__title'><%= t('.title') %></section>
<section class= 'sign-up__form--content'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <article>
      <%= f.label :email, t('.email') %><br />
      <%= f.email_field :email, autofocus: true, :class => 'sign-up__form--text-field', autocomplete: "email" %>
    </article>

    <article>
      <%= f.label :password, t('.password') %><br />
      <%= f.password_field :password, :class => 'sign-up__form--text-field', autocomplete: "new-password" %>
    </article>

    <article>
      <%= f.label :password_confirmation, t('.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, :class => 'sign-up__form--text-field', autocomplete: "new-password" %>
    </article>

    <article><%= f.submit t('.sign_up'), :class => 'mui-btn mui-btn--danger sign-up__form--button' %></article>
  <% end %>

  <section class= 'sign-up__links'>
    <%= t('.create_dialog') %>
    <%- if controller_name != 'sessions' %>
      <%= link_to t('.log_in'), new_session_path(resource_name) %><br />
    <% end %>
  </section>
</section>
