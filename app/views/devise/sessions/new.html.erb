<section class= 'log-in__title'><%= t('.title') %></section>
<section class= 'log-in__form--content'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'partials/flash' %>

    <article>
      <%= f.label :email, t('.email') %><br />
      <%= f.email_field :email, autofocus: true, :class => 'log-in__form--text-field', autocomplete: "email" %>
    </article>

    <article>
      <%= f.label :password, t('.password') %><br />
      <%= f.password_field :password, :class => 'log-in__form--text-field', autocomplete: "current-password" %>
    </article>

    <% if devise_mapping.rememberable? %>
      <article>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t('.remember_me') %>
      </article>
    <% end %>

    <article><%= f.submit t('.log_in'), :class => 'mui-btn mui-btn--danger log-in__form--button' %></article>
  <% end %>

  <section class= 'log-in__links'>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create New Account", new_registration_path(resource_name) %><br />
    <% end %>
  </section>
</section>
