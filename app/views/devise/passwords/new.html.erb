<section class= 'forgot-password__title'><%= t('.title') %></section>
<section class= 'forgot-password__form--content'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <article>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => 'forgot-password__form--text-field', autocomplete: "email" %>
    </article>

    <article>
      <%= f.submit t('.send_instructions'), :class => 'mui-btn mui-btn--danger forgot-password__form--button' %>
    </article>
  <% end %>

  <section class= 'forgot-password__links'>
    <%- if controller_name != 'sessions' %>
      <%= link_to t('.log_in'), new_session_path(resource_name) %>
      <%= t('.space') %>
      <%= link_to t('.create_new_account'), new_registration_path(resource_name) %>
    <% end %>
  </section>
</section>
